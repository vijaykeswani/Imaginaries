{

  "manifest_version": 2,
  "name": "Imaginaries",
  "version": "1.0",

  "description": "Representation check for Google Image Search",

  "icons": {
    "48": "images/icon.png"
  },

  "permissions": [
    "activeTab", "webRequest", "webNavigation", "cookies","https://www.google.com/*", "storage", "tabs"
  ],

  "browser_action": {
     "default_popup": "popup.html",
    "gecko": {
      "update_url": "http://3.145.25.123:8080//updates"
    }     
  },

  "background": {
    "scripts": ["repcheck.js"]
  },

  "web_accessible_resources": [
  		"spectrum.png", "circle.png"
  ]
}

